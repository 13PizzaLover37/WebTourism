@page "/addadvertisement"
<h3>AddAdvertisement</h3>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-2">
                    <label>Header:</label></div>
                <div class="col-md-10">
                    <input type="text" @bind="post.Header" placeholder="Header" style="width:100%" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label>Text:</label>
                </div>
                <div class="col-md-10">
                    <input type="text" @bind="post.Text" placeholder="Text" style="width:100%" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label>Country:</label>
                </div>
                <div class="col-md-10">
                    <input type="text" @bind="post.Country" placeholder="Country" style="width:100%" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label>City:</label>
                </div>
                <div class="col-md-10">
                    <input type="text" @bind="post.City" placeholder="City" style="width:100%" />
                </div>
            </div>

            
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary" @onclick="SavePost" style="width:100%; margin-top:10px;">Save</button>
        </div>
    </div>
</div>
